<scene>
	<acceleration type="hlbvh">
		<integer name="leafSize" value="10"/>
	</acceleration>

	<integrator type="pathEMS">
		<integer name="depth" value="32"/>
	</integrator>
	
	<sampler type="independent">
		<integer name="sampleCount" value="2048"/>
	</sampler>

	<camera type="perspective">
		<transform name="toWorld">
			<lookat origin="20, 20, 50" 
				target="0, 4, 0"
				up="0, 1, 0"/>
		</transform>
		<float name="fov" value="39.3077"/>
		<integer name="width" value="768"/>
		<integer name="height" value="432"/>
	</camera>

	<!-- monolith -->
	<mesh type="obj">
		<transform name="toWorld">
			<translate value="-3, 0.5, 0"/>
			<scale value="1, 9, 4"/>
		</transform>
		<string name="filename" value="cube.obj"/>
		<bsdf type="mirror"/>
	</mesh>
	
	<!-- floor -->
	<mesh type="obj">
		<string name="filename" value="cube.obj"/>
		<transform name="toWorld">
			<translate value="0, -0.5, 0"/>
			<scale value="25, 1, 18"/>
		</transform>
		<bsdf type="diffuse">
			<color name="albedo" value="0.85, 0.85, 0.85"/>
		</bsdf>
	</mesh>

	<!-- glowing wall -->
	<mesh type="obj">
		<string name="filename" value="cube.obj"/>
		<transform name="toWorld">
			<translate value="0, 0.5, 0"/>
			<scale value="1, 10, 18"/>
			<translate value="12, 0, 0"/>
		</transform>
		<bsdf type="diffuse">
			<color name="albedo" value="0.0, 0.0, 0.0"/>
		</bsdf>
		<emitter type="area">
			<color name="radiance" value="5, 5, 5"/>
		</emitter>
	</mesh>

	<!-- door -->
	<mesh type="obj">
		<string name="filename" value="cube.obj"/>
		<transform name="toWorld">
			<scale value="1, 10, 12"/>
			<rotate axis="0,1,0" angle="20"/>
			<translate value="8, 4.5, 3"/>
		</transform>
		<bsdf type="diffuse"> 
			<color name="albedo" value="0.85, 0.85, 0.85"/>
		</bsdf>
	</mesh>

	<!-- red wall -->
	<mesh type="obj">
		<string name="filename" value="cube.obj"/>
		<transform name="toWorld">
			<scale value="25, 10, 1"/>
			<translate value="0,5,-9"/>
		</transform>
		<bsdf type="diffuse">
			<color name="albedo" value="0.85, 0, 0"/>
		</bsdf>
	</mesh>

	<!-- green wall -->
	<mesh type="obj">
		<string name="filename" value="cube.obj"/>
		<transform name="toWorld">
			<scale value="1, 10, 18"/>
			<translate value="-12.5, 5, 0"/>
		</transform>
		<bsdf type="diffuse">
			<color name="albedo" value="0, 0.85, 0"/>
		</bsdf>
	</mesh>
</scene>
